{
  "name": "starter",
  "version": "0.1.0",
  "description": "Production-ready Next.js starter template for landing pages",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint .",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepare": "husky"
  },
  "dependencies": {
    "@headlessui/react": "^2",
    "@hookform/resolvers": "^5",
    "@mdx-js/loader": "^3",
    "@mdx-js/react": "^3",
    "@neondatabase/serverless": "^1",
    "@next/mdx": "^16.1.1",
    "@radix-ui/react-slot": "^1",
    "@react-email/components": "^1",
    "@t3-oss/env-nextjs": "^0.13.10",
    "@types/mdx": "^2",
    "@vercel/analytics": "^1",
    "class-variance-authority": "^0.7",
    "clsx": "^2",
    "drizzle-orm": "^0.45",
    "lucide-react": "^0.562",
    "next": "^16.1.1",
    "next-auth": "5.0.0-beta.30",
    "react": "^19",
    "react-dom": "^19",
    "react-email": "^5",
    "react-hook-form": "^7",
    "resend": "^6",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3",
    "zod": "^4"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@tailwindcss/typography": "^0.5.19",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@types/node": "^22",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^5.1.2",
    "dotenv": "^17.2.3",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9",
    "eslint-config-next": "^16.1.1",
    "husky": "^9.1.7",
    "jsdom": "^27.4.0",
    "lint-staged": "^16",
    "prettier": "^3",
    "prettier-plugin-tailwindcss": "^0.7",
    "tailwindcss": "^4",
    "typescript": "^5",
    "vitest": "^4.0.16"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
